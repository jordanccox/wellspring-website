  <section class="bg-orange-500 pb-8">
    <div class="mx-auto bg-transparent">
      <div
        id="controls-carousel"
        class="relative w-full my-0"
        data-carousel="slide"
      >
        <!-- Carousel wrapper -->
        <div
          class="relative h-[15rem] overflow-hidden lg:h-[44rem] md:h-[36rem] sm:h-[26rem]"
        >
          <!-- Populate carousel -->
          {% for item in homeCarousel %}
          <div class="hidden duration-[2000ms] ease-in-out" data-carousel-item>
            <a href="/portfolio">
              <img
                srcset="
                  ../images/responsive-img/{{item}}-480w.jpg   480w,
                  ../images/responsive-img/{{item}}-920w.jpg   920w,
                  ../images/responsive-img/{{item}}-1270w.jpg 1270w,
                  ../images/responsive-img/{{item}}-1400w.jpg 1400w,
                  ../images/responsive-img/{{item}}-1760w.jpg 1760w,
                  ../images/responsive-img/{{item}}-2048w.jpg 2048w
                "
                src="../images/responsive-img/{{ item }}-920w.jpg"
                sizes="100vw"
                class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
                alt="..."
              />
            </a>
          </div>
          {% endfor %}
        </div>
        <!-- Slider controls -->
        <button
          type="button"
          class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
          data-carousel-prev
        >
