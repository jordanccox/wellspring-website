  <section class="bg-orange-500 pb-8 px-2" id="services">
    <div
      class="container mx-auto bg-gray-50 p-4 sm:px-12 px-8 rounded text-justify"
    >
      <h1 class="mt-2 mb-6">Our Services</h1>
      <div class="flex flex-wrap justify-evenly gap-y-8 mb-4">
        {% for service in ourServices %}
        <!-- Service Card -->
        <div
          class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex-auto"
        >
          <a href="#">
            <img
              class="rounded-t-lg"
              src="../images/{{ service.image }}"
              alt=""
            />
          </a>
          <div class="p-5">
            <a href="{{ service.url }}">
              <h2 class="mb-2 text-2xl font-bold tracking-tight text-slate-800">
                {{ service.title }}
              </h2>
            </a>
            <p class="mb-3 font-normal text-gray-800">
              {{ service.content }}
            </p>
            <div class="flex flex-col sm:flex-row sm:justify-center">
              <a
                href="{{ service.url }}"
                class="inline-flex justify-center items-center py-3 px-5 text-base bg-gray-50 rounded ring-1 ring-slate-800 hover:ring-1 hover:ring-orange-600 font-semibold mt-5 mb-3"
